{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "types": ["jest"],
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "lib": ["es2018"],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
